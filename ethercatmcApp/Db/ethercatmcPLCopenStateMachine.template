    field(TTVL, "1013")
    field(FTVL, "1014")
    field(FFVL, "1015")

    field(ZRST, "Idle")
    field(ONST, "StandStill")
    field(TWST, "Homing")
    field(THST, "DiscreteMotion")
    field(FRST, "ContinousMotion")
    field(FVST, "SynchronizedMotion")
    field(SXST, "Stopping")
