epicsEnvSet("IPADDR",        "$(SM_IPADDR=127.0.0.1)")
epicsEnvSet("IPPORT",        "$(SM_IPPORT=5000)")
epicsEnvSet("ASYN_PORT",     "$(SM_ASYN_PORT=MC_CPU1)")
epicsEnvSet("SYSPFX",        "$(SM_SYSPFX=IOC:)")
epicsEnvSet("MCUPFX",      "")
epicsEnvSet("AXIS_NAME",    "$(SM_AXIS_NAME=m1)")
