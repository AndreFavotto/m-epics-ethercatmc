#ICS Beckhoff cx5130, "mini PTP", B02

epicsEnvSet("MOTOR_PORT",    "$(SM_MOTOR_PORT=MCU1)")

epicsEnvSet("IPADDR",        "$(SM_IPADDR=127.0.0.1)")
epicsEnvSet("IPPORT",        "$(SM_IPPORT=48898)")
epicsEnvSet("ASYN_PORT",     "$(SM_ASYN_PORT=MC_CPU1)")
epicsEnvSet("PREFIX",        "Labs-YMIR:MC-MCU-01:")
epicsEnvSet("PREC",          "$(SM_PREC=3)")
epicsEnvSet("SM_NOAXES",     "4")
epicsEnvSet("ECM_OPTIONS",   "adsPort=852;amsNetIdRemote=5.36.136.2.1.1;amsNetIdLocal=5.36.136.2.1.1"



# No poller yet, see ethercatmcStartPoller at the end of the script
epicsEnvSet("ECM_MOVINGPOLLPERIOD", "0")
epicsEnvSet("ECM_IDLEPOLLPERIOD", "0")
< ethercatmcController.iocsh

#####################################################
# EL1252, first channel, CHNO == 0
epicsEnvSet("CHNO",     "0")
< ethercatmcEL1252-OneChannel.iocsh


#####################################################
# PTP with ExtSync
< ethercatmcEL6688-PTP.iocsh


epicsEnvSet("MOVINGPOLLPERIOD", "500")
epicsEnvSet("IDLEPOLLPERIOD",   "500")
ethercatmcStartPoller("$(MOTOR_PORT)", "$(MOVINGPOLLPERIOD)", "$(IDLEPOLLPERIOD)")
